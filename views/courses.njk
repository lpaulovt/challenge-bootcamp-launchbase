{% extends "layout.njk" %}

{% block head %}
<title>Cursos - Rocketseat</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Conte√∫dos</h1>
    </div>
    
    <section class="cards">

    {% for item in items %}

        <div class="card" id="{{item.id}}">
            <div class="card__image-container">
                <img src="https://skylab.rocketseat.com.br/static/{{item.id_image}}.svg" alt="Logo do curso {{item.title}}">
            </div>
            <div class="card__content">
                <p>{{item.title}}</p>
            </div>
            <div class="card__info">
                <p>{{item.modules}}</p>
                <p class="card__price">{{item.price}}</p>
            </div>
        </div>
    {% endfor%}


    </section>
    <script src="scripts.js"></script>
{% endblock %}